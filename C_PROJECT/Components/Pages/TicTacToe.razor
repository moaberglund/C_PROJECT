@page "/tictactoe"

<PageTitle>Tic Tac Toe</PageTitle>

<h3>Tic Tac Toe</h3>



<div class="content">
    @*Create board of rows and columns*@
    <div class="container">

        @for (int row = 0; row < 3; row++)
        {

            for (int col = 0; col < 3; col++)
            {
                // Skapa lyssnare när spelaren klickar på cellen, kalla på funktion
                <div class="cell" @onclick="async () => await MakeaMove(row, col)">
                    <h4>@board[row, col]</h4>
                </div>
            }

        }

    </div>


    <div>
        <button class="btn btn-info shadow">Restart Game</button>
    </div>

</div>
